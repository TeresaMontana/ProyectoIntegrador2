<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>

        <% if (locals.user) { %>
            <%- include('./partials/headerLogueado') %>
                <% } else { %>
                    <%- include('./partials/header') %>
                        <% } %>
                            <main>
                                <div class="user-detail container">
                                    <section class="top main-content">
                                        <div class="info-usuario">
                                            <img class="profile" src="/img/FotodePerfil/<%= usuario.foto %>" alt="">
                                            <p>
                                                <%= usuario.username %>
                                            </p>
                                            <a class="follow" href="">seguir</a>
                                            <ul class="meta">
                                                <li>
                                                    <%= usuario.posteos_usuario.length %>
                                                </li>

                                            </ul>
                                        </div>
                                    </section>
                                    <section class="bottom">
                                        <% for(let i=0; i < usuario.posteos_usuario.length; i++) { %>
                                            <article class="post">
                                                <a href="/posts/detallePost/<%= usuario.posteos_usuario[i].id %>">
                                                    <img src="/img/Posteos/<%= usuario.posteos_usuario[i].foto %>" alt="">
                                                    <p>
                                                        <%= usuario.posteos_usuario[i].texto %>
                                                    </p>
                                                </a>
                                            </article>
                                            <%}%>
                                    </section>
                                </div>
                            </main>

                            <%- include('./partials/footer')%>
    </body>

</html>